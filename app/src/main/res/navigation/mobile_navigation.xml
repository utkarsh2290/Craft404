<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.mstc.craft404.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.mstc.craft404.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_results"
        android:name="com.mstc.craft404.ui.results.ResultsFragment"
        android:label="@string/title_results"
        tools:layout="@layout/results_fragment" />
    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.mstc.craft404.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_contacts"
        android:name="com.mstc.craft404.ui.contacts.ContactsFragment"
        android:label="@string/title_contacts"
        tools:layout="@layout/contacts_fragment" />


</navigation>