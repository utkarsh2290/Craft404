<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">


        <ImageView
            android:id="@+id/chapter_stc"
            android:layout_width="264dp"
            android:layout_height="116dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/ic_stc_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_chapter_stc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/gotham_regular"
            android:lineSpacingExtra="4dp"
            android:text="Student Technical Community, VIT is a team of enthusiastic techies and excited learners from the no. 1 private engg. college of India - VIT.  With over 11 Microsoft Student Partners and Alexa Student Influencers amongst us, our chapter has been known for organizing some of the most eminent events across the campus. We are proud curators and mentors of 15+ tech talks, 10+ projects, an active medium platform, and of course, our flagship event “BREW” which had 250+ attendees. We have a mission to foster innovation via projects, while collaborating with students on our campus through workshops, webinars, and events that ensure a definitive transfer of knowledge."
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chapter_stc" />

        <LinearLayout
            android:id="@+id/contact_chapter_stc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_chapter_stc">


            <TextView
                android:id="@+id/tv_contact_stc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/gotham_regular"
                android:text="Contact Us"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/button_fb_stc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_fb_logo" />

            <ImageButton
                android:id="@+id/button_instagram_stc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_insta_logo" />

            <ImageButton
                android:id="@+id/button_linkedin_stc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_linkedin_logo" />

        </LinearLayout>

        <ImageView
            android:id="@+id/chapter_siam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:src="@drawable/ic_siam_logo_final"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contact_chapter_stc" />

        <TextView
            android:id="@+id/tv_chapter_siam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/gotham_regular"
            android:lineSpacingExtra="4dp"
            android:text="SIAM VIT – Society for Industrial and Applied Mathematics - is a Student technical chapter in Vellore Institute of Technology- affiliated to SIAM International and it works for the application of Mathematics along with computational science to solve real life problems. It provides the required tools to students for developing their knowledge in various fields like Technical, Design and Editorial as per one’s own interest. It also works on developing the management skills of an individual by providing the recruits a chance to conduct a few cultural and technical events which give them an exposure and makes them work for the efficient coordination of the event. "
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chapter_siam" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_chapter_siam">


            <TextView
                android:id="@+id/tv_contact_siam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/gotham_regular"
                android:text="Contact Us"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/button_fb_siam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_fb_logo"  />

            <ImageButton
                android:id="@+id/button_instagram_siam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_insta_logo"  />

            <ImageButton
                android:id="@+id/button_linkedin_siam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="24dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_linkedin_logo" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>